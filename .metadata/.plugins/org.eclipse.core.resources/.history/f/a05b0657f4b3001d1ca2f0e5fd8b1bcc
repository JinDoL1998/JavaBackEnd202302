package chapter2.B_Switch;

// switch 조건문
// 비교할 변수를 case 값과 비교하여 같은 case를 찾아 해당 case구문부터 끝까지 실행
// break 문으로 해당 switch 종료
// default 문으로 해당하는 case가 없을 때 실행할 구문을 작성

public class Switch {

	public static void main(String[] args) {
		
		// switch 사용 방법
//		switch (비교할 대상) {
//		case 비교할 값1:
//			비교할 값1과 비교할 대상이 같을 경우 실행할 코드
//		case 비교할 값2:
//			비교할 값2와 비교할 대상이 같을 경우 실행할 코드
//			break 구문으로 switch를 해당위치에서 종료시킬 수 있음.
//			break;
//		default:
//			비교할 대상과 일치하든 안하든 실행할 코드
//				
//		}
		
		// switch문은 조건에 따라서 코드 실행 범위를 지정하는 것
		
	}

}
